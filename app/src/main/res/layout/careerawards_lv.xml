<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="354dp"
        android:background="@drawable/coner"
        android:elevation="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/awardsnameText"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/dalseo"
                android:text="수상명"
                android:textColor="#263BF4"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/internName"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="수상명을 입력해주세요"
                android:inputType="textPersonName"
                android:textColorHint="#263BF4"
                android:fontFamily="@font/dalseo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/awardsinstText"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="수상기관"
                android:textColor="#263BF4"
                android:textSize="24sp"
                android:fontFamily="@font/dalseo"/>

            <EditText
                android:id="@+id/awardsInst"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="수상기관을 입력해주세요"
                android:inputType="textPersonName"
                android:textColorHint="#263BF4"
                android:fontFamily="@font/dalseo"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/awardsdateText"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/dalseo"
                android:text="수상일자"
                android:textColor="#263BF4"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/awardsDate"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="수상일자를 입력해주세요"
                android:inputType="textPersonName"
                android:textColorHint="#263BF4"
                android:fontFamily="@font/dalseo"/>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:onClick="showDatePicker"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@android:drawable/ic_menu_my_calendar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_award"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사진 가져오기" />

            <ImageView
                android:id="@+id/award_img"
                android:layout_width="match_parent"
                android:layout_height="149dp"
                app:srcCompat="@android:drawable/ic_menu_gallery" />
        </LinearLayout>


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"/>

</LinearLayout>